<div class="container">
    <div class="row border p-1 mt-3">
        <h3>Subscribed List:</h3>
        <hr />
        <div class="row p-2">
            <div class="col-12">
                <label style="color:#B52033" id="lbl_houseJoined"></label>
            </div>
        </div>
    </div>
    <div class="row border p-1 mt-3">
        <h3>Subscribe:</h3>
        <hr />
        <div class="row p-2">
            <div class="col-3">
                <button class="btn" style="background-color:#B52033" id="btn_gryffindor">Gryffindor</button>
            </div>
            <div class="col-3">
                <button class="btn" style="background-color:#236E50" id="btn_slytherin">Slytherin</button>
            </div>
            <div class="col-3">
                <button class="btn" style="background-color:#ED8526" id="btn_hufflepuff">Hufflepuff</button>
            </div>
            <div class="col-3">
                <button class="btn" style="background-color:#10749F" id="btn_ravenclaw">Ravenclaw</button>
            </div>
        </div>
    </div>
    <div class="row border p-1 mt-3">
        <h3>Unsubscribe:</h3>
        <hr />
        <div class="row p-2">
            <div class="col-3">
                <button class="btn" style="background-color:#B52033; display:none" id="btn_un_gryffindor">Gryffindor</button>
            </div>
            <div class="col-3">
                <button class="btn" style="background-color:#236E50; display:none" id="btn_un_slytherin">Slytherin</button>
            </div>
            <div class="col-3">
                <button class="btn" style="background-color:#ED8526; display:none" id="btn_un_hufflepuff">Hufflepuff</button>
            </div>
            <div class="col-3">
                <button class="btn" style="background-color:#10749F; display:none " id="btn_un_ravenclaw">Ravenclaw</button>
            </div>
        </div>
    </div>
    <div class="row border p-1 mt-3">
        <h3>Trigger Notification:</h3>
        <hr />
        <div class="row p-2">
            <div class="col-3">
                <button class="btn" style="background-color:#B52033" id="trigger_gryffindor">Gryffindor</button>
            </div>
            <div class="col-3">
                <button class="btn" style="background-color:#236E50" id="trigger_slytherin">Slytherin</button>
            </div>
            <div class="col-3">
                <button class="btn" style="background-color:#ED8526" id="trigger_hufflepuff">Hufflepuff</button>
            </div>
            <div class="col-3">
                <button class="btn" style="background-color:#10749F" id="trigger_ravenclaw">Ravenclaw</button>
            </div>
        </div>
    </div> 

    <div class="row border p-1 mt-2">
        <h3>Deathly Hallow Race</h3>
        <div class="col-lg-4">
            <div>Invisibility Cloak - <span id="cloakCounter"></span></div>
        </div>
        <div class="col-4">
            <div>Resurrection Stone - <span id="stoneCounter"></span></div>
        </div>
        <div class="col-4">
            <div>Elder Wand - <span id="wandCounter"></span></div>
        </div>
        <hr />
        <p>Url to Vote:</p>
        <div class="col-4">
            <a class="btn btn-primary" href="https://localhost:7001/Home/DeathlyHallows?type=cloak">1. Invisibility Cloak </a>
        </div>
        <div class="col-4">
            <a class="btn btn-secondary" href="https://localhost:7001/Home/DeathlyHallows?type=stone">2. Resurrection Stone </a>
        </div>
        <div class="col-4">
            <a class="btn btn-danger" href="https://localhost:7001/Home/DeathlyHallows?type=wand">3. Elder Wand</a>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-3">
        Total Views:
    </div>
    <div class="col-4">
        <span id="totalViewsCounter"></span>
    </div>
</div>
<div class="row">
    <div class="col-3">
        Total Users:
    </div>
    <div class="col-4">
        <span id="totalUsersCounter"></span>
    </div>
</div>
</div>

<script src="~/lib/microsoft/signalr/dist/browser/signalr.js"></script>
<script src="~/js/userCount.js"></script>
<script src="~/js/deathlyHallows.js"></script>
<script src="~/js/houseGroup.js"></script>